Heating system temperture from 0 to 300K
&cntrl
nmropt=1,    ! NMR restraints and weight changes will be read
ntt=1,       ! Temperature scaling
tempi=0.0,   ! Initial temperature
temp0=300.0, ! Reference temperature
tautp=1.0,   ! Tempeature coupling time [ps]
ig=-1,       ! Random seed will be generated by date and time

dt=0.002,    ! time step is 2fs
nstlim=50000,! the number of steps(2fs * 50000 = 100ps)
ntb=1,       ! Periodic boundary condition with constant volume
ntf=2,       ! Calculate all forces
cut=9.0,     ! Cutoff of nonbonded interactions

ntr=1,
ntrx=1,
restraintmask="@C,O,N,CA,P & !:WAT",
restraint_wt=2.0,
ntc=2,       ! SHAKE constraints and some options

ntpr=500, ! Print energies every ntpr steps
ntwx=500, ! Write coordinates every ntwx steps
iwrap=1,  ! Write trajectory into box
ntx=1,    ! Read initial coodinates without velocity
ioutfm=1, ! Trajectory format will be binary
&end
&wt TYPE="TEMP0", istep1=0, istep2=25000,
    value1=0.1, value2=300.0, /
&wt TYPE="END" /
END

